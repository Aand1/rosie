## propose pick-up for all known objects
sp {propose*pickup*object
   (state <s> ^object <obj>
              -^work-space << games perception >> #JK dont fire in game learning work space
   	       -^problem-space << lgsoar message-interpretation >>
	      -^grabbed <obj>
	      ^name {<any> <> evaluate-operator})
   (<obj> ^category block)
 -->
   (<s> ^operator <op> +)
   (<op> ^name op_pick-up-object
   	 ^argument1 <obj>)
}

sp {elaborate*pickup*object*action
   (state <s> ^operator <op> +)
   (<op> ^argument1 <obj>
   	 ^name op_pick-up-object)
   (<obj> ^id <id>)
  -->
   (<op> ^actions.pick-up.object-id <id>
 	 ^category primitive-action)
   (<op> ^kind non-atomic)
}

sp {topstate*pickup*move*object*svs
   (state <s> ^topstate <s>
              ^io.input-link.self <self>
              ^io.output-link <ol>)
   (<op> ^name op_pick-up-object
         ^argument1.id <id>)
   (<self> ^grabbed-object <id>
           ^pose <pose>)
   (<pose> ^x <x> ^y <y> ^z <z>)
-->
   (<ol> ^modify-scene <ms>)
   (<ms> ^type move
         ^id <id>
         ^pos <pose>)
}

