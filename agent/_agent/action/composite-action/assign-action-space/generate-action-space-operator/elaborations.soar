######################### elaborate state ##############################
sp {generate-action-space-operator*elaborate*state
   (state <s> ^name generate-action-space-operator
   	      ^superstate.operator <sop>
	      ^problemspace <ps>)
   (<sop> ^name generate-action-space-operator
   	  ^template <op-id>)
-->
   (<s> ^operator-template <op-id>
   	^pairs <p>
	^name action)
   (<ps> ^state <st>)
   (<st> ^dont-copy object)
}

