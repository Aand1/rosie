### propose successful completion if the desired state is reached
sp {composite-action*mark*applied
   (state <s> ^problemspace <ps>
	      ^desired <d>
	      ^success <d>
	      ^superstate.operator <ia>
	      ^quiescence t)
   (<ps> ^action.category composite)
-->
   (<ia> ^applied yes)
}

sp {composite-action*mark*applied*topstate
   (state <s> ^problemspace <ps>
	      ^desired <d>
	      ^success <d>
	      ^superstate.topstate-indexed-action <ia>
	      ^quiescence t)
   (<ps> ^action.category composite)
-->
   (<ia> ^applied yes)
}

sp {learn-proposal-rule*composite-action*mark*applied
   (state <s> ^problemspace <ps>
	      ^desired <d>
	      ^success <d>
	      ^superstate <ss>)
   (<ps> ^action.category composite)
   (<ss> ^operator <ia>)
-->
   (<ss> ^successful-application <ia>)
}

