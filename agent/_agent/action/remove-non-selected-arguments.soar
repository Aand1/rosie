#### if an indexed-action is selected, delete other arguments 

sp {action*apply*operator*remove*non-selected*arguments*level1
   (state <s> ^name action
              ^operator <o>
              ^action-command <cmd>)
   (<o> ^name <op-name>
        ^<arg-name> <arg>)
   (<cmd> ^_metadata <meta>
          ^<arg-name> { <bad-arg> <> <arg> })
   (<meta> ^op_name <op-name>
           ^leve1-arg <arg-name>)
-->
   (<cmd> ^<arg-name> <bad-arg> -)
}

sp {action*apply*operator*remove*non-selected*arguments*level2
   (state <s> ^name action
              ^operator <o>
              ^action-command <cmd>)
   (<o> ^name <op-name>
        ^<arg-name>.<arg2-name> <arg2>)
   (<cmd> ^_metadata <meta>
          ^<arg-name> <bad-arg>)
   (<bad-arg> ^<arg2-name> { <bad-arg2> <> <arg2>})
   (<meta> ^op_name <op-name>
           ^level2-arg <arg-name>)
-->
   (<cmd> ^<arg-name> <bad-arg> -)
}
