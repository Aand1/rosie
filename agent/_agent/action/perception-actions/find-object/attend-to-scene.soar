sp {find-object*propose*attend-to-scene
   (state <s> ^name find-object
             -^current-action.attended-to-scene true)
-->
   (<s> ^operator <o> + >)
   (<o> ^name attend-to-scene
        ^action-type custom)
}

sp {attend-to-scene*elaborate*attend-to-all-scene-changes
   (state <s> ^name attend-to-scene)
-->
   (<s> ^attend-to-all-scene-changes true)
}

sp {attend-to-scene*reject*all*primitive*actions
   (state <s> ^name attend-to-scene)
-->
   (<s> ^problemspace action -)
}

sp {attend-to-scene*propose*wait
   (state <s> ^name attend-to-scene
             -^operator.name wait)
-->
   (<s> ^operator <o> + = <)
   (<o> ^name wait)
}

sp {find-object*apply*attend-to-scene*quiescence
   (state <s> ^name find-object
              ^operator.name attend-to-scene
              ^topstate.scene-monitor.quiescence true
              ^current-action <a>)
-->
   (<a> ^attended-to-scene true)
}


sp {find-object*apply*any-op*remove*attended-to-scene
   (state <s> ^name find-object
              ^operator.subaction.complete true
              ^current-action <a>)
   (<a> ^attended-to-scene true)
-->
   (<a> ^attended-to-scene true -)
}