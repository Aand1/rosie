## find the projected location using spatial-reasoning system

sp {propose*find-projection*put-down
   (state <s> ^name op_put-down-object-location
   	      ^io
	      ^argument1 <obj1>
	      ^argument2 <nval>
	      -^projection-result)
   (<nval> ^argument <obj2>
   	   ^relation.type <rel>)
-->
   (<s> ^operator <op> + >)
   (<op> ^name find-projection
   	^interaction true
	^a <obj1>
	^b <obj2>
	^type <rel>
	^category <svs>)
}

## setup tracking 
sp {tracking*put-down
   (state <s> ^name op_put-down-object-location
   	      ^projection-result <res>
	      ^io
	      ^argument1 <obj1>
	      ^argument2 <nval>
	      ^topstate <ts>)
   (<nval> ^argument <loc>
   	   ^relation <rel>)
-->
   (<ts> ^track-relation <relation>)
   (<relation> ^object1 <obj1>
   	       ^object2 <loc>
	       ^predicate <rel>
	       ^vpredicate <rel>)
}

