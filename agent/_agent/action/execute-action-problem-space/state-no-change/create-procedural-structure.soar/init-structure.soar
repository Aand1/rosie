sp {create-procedural-structure*propose*init-structure
   (state <s> ^name create-procedural-structure
              ^action-id <id>
             -^procedural)
   (<id> ^name <name>)
-->
   (<s> ^operator <o> +)
   (<o> ^name init-structure
        ^action-name <name>)
}

sp {create-procedural-structure*apply*init-structure*default
   (state <s> ^name create-procedural-structure
              ^operator <o>)
   (<o> ^name init-structure
        ^action-name <name>)
-->
   (<s> ^procedural <proc>)
   (<proc> ^op_name (make-constant-symbol (concat |op_| <name> )))
}