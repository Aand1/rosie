### decrease time
sp {wait*operator*temporal*propose*initialize-counter
   (state <s> ^name op_wait
   	      ^type time
	      ^minutes <min>
	      -^initialized)
-->
   (<s> ^operator <op> +)
   (<op> ^name initialize-counter
   	 ^minutes <min>)
}

sp {wait*operator*temporal*apply*initialize-counter
   (state <s> ^name op_wait
   	      ^type time
	      ^operator <op>)
   (<op> ^name initialize-counter
   	 ^minutes <min>)
-->
   (<s> ^counter <min>
   	^initialized true)
}

sp {wait*operator*temporal*elaborate*wait
   (state <s> ^name op_wait
   	      ^type time
	      ^operator <op>
	      ^counter <count>)
   (<op> ^name wait)
-->
   (<op> ^counter <count>)
}

sp {wait*operator*decrement*counter
   (state <s> ^name op_wait
   	      ^operator <op>)
   (<op> ^name wait
   	 ^counter <count>)
-->
   (<s> ^counter <count> -
   	^counter (- 1 <count>))
}
