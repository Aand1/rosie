#watch 0
#decide set-random-seed

max-elaborations 500
#max-nil-output-cycles 100

alias mem production memory-usage
alias pfc print -fc
max-goal-depth 100
alias stcyc stats --cycle
alias statsm stats -M
#stats --track 

indifferent-selection -g
#indifferent-selection -e 0
decide indifferent-selection -x
#decide set-random-seed


multi-attributes object 20
multi-attributes preposition 10
multi-attributes property 9
multi-attributes relation 8

#multi-attributes find 25
#multi-attributes relationships 25
#multi-attributes relation 500
#multi-attributes goal-possible-match-set 360
#multi-attributes goal-found-possible 25
#multi-attributes goal-possible-match 500
#multi-attributes name 1


###### CHUNKING #####
learn --only

max-chunks 1000
#exp -a


###### SEMANTIC MEMORY ######
smem --set learning on
smem --set initial-variable-id 999000
#smem --set activation-mode maximal-constraint 


###### EPISODIC MEMORY ######

# Switch comments to turn on/off
epmem --set learning on
#epmem --off

epmem --set trigger dc
epmem --set phase output
epmem --set graph-match on


######### SVS ######
svs --enable
