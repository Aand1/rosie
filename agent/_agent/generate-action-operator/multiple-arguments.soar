# Report failure
sp {generate-action-operator*apply*multiple-argument*report*no-proposed-action
   (state <s> ^name generate-action-operator
              ^operator.name multiple-argument
              ^top-state.interaction.status <status>)
-->
   (<status> ^failure.type multiple-arguments)
}

# If debug-mode is on, print error info
sp {generate-action-operator*apply*multiple-argument*debug-mode*print
   (state <s> ^name generate-action-operator
              ^operator <o>
              ^top-state.agent-params.debug-mode on)
   (<o> ^name multiple-argument
        ^arg-name <arg-name>)
-->
   (write |generate-action-operator: multiple arguments for | <arg-name> (crlf))
}
