# LTI's are listed at https://docs.google.com/spreadsheets/d/1SNkkEIQo8q_8AkT6zwGYUDUBvRp2pjSrmTm3FheLR1Y

smem --add {
## put the red block in the pantry.
     (@A1000 ^name put-down1 ^procedural <proc00> ^type action)
     (<proc00> ^op_name op_put-down-object ^arg1 <parg001> ^arg2 <parg002>)
     (<parg002> ^relation <rel002> ^arg2 <obj002>)
## pick up the yellow block.
     (@A1001 ^name pick-up1 ^procedural <proc01> ^type action)
     (<proc01> ^op_name op_pick-up-object ^arg1 <parg011>)
## point to the yellow block.
     (@A1002 ^name point1 ^linguistic <al3> ^procedural <ap3> ^type action)
     (<al3> ^verb point ^pp-object <pp3>) 
     (<pp3> ^object <obj3>)
     (<ap3> ^op_name op_point-to-object ^arg1 <parg3>)
     (<parg3> ^arg <obj3>)
### open the pantry/stove.
     (@A1003 ^name open1 ^linguistic <al18> ^procedural <ap18> ^type action)
     (<al18> ^verb open ^direct-object <obj18>) 
     (<ap18> ^op_name op_open ^arg1 <obj18>)
# close the pantry/stove.
     (@A1004 ^name close1 ^linguistic <al16> ^procedural <ap16> ^type action)
     (<al16> ^verb close ^direct-object <obj16>) 
     (<ap16> ^op_name op_close ^arg1 <obj16>)
## activate (on/off; change the current state to the other state)
     (@A1005 ^name activate1 ^linguistic <al17> ^procedural <ap17> ^type action)
     (<al17> ^verb activate ^direct-object <obj17>) 
     (<ap17> ^op_name op_activate ^arg1 <obj17>)
## stop
     (@A1006 ^name stop1 ^linguistic <al20> ^procedural <ap20> ^type action)
     (<al20> ^verb stop ^direct-object <obj20>) 
     (<ap20> ^op_name op_stop ^arg1 <obj20>)
## new wait
     (@A1007 ^name wait1 ^linguistic <al10> ^procedural <ap10> ^type action)
     (<al10> ^verb wait ^state-object <s10>) 
     (<s10> ^object <obj10> ^state <st10>)
     (<ap10> ^op_name op_wait ^arg1 <parg10>)
     (<parg10> ^arg <obj10> ^state <st10>)

(@A1008 ^name move)
(@A1009 ^name store)
(@A1010 ^name discard)
(@A1011 ^name stack)
(@A1012 ^name cook)
(@A1013 ^name set)
(@A1014 ^name clean)
(@A1015 ^name turn-on)
(@A1016 ^name turn-off)
(@A1017 ^name serve)
}