# Make sure environment knowledge is updated
# before we try anything else
sp {prefer*attend-to-scene-change
   (state <s> ^problemspace motion
              ^operator <o1> +
              ^operator <o2> +)
   (<o1> ^name attend-to-scene-change)
-->
   (<s> ^operator <o1> > <o2>)
}

# Cleanup? This isn't really a preference. But.
sp {propose*remove*old*projection
   (state <s1> ^superstate nil
               ^projection-result <p>)
  -(<s2> ^type state
		 ^name point)
-->
   (<s1> ^operator <o> + >, =)
   (<o> ^name remove-old-projection)
}

sp {apply*remove*old*projection
   (state <s> ^operator.name remove-old-projection
              ^svs.command <cmd>
              ^projection-result <p>)
   (<cmd> ^project <proj>)
   (<proj> ^result <p>)
-->
   (<s> ^projection-result <p> -)
   (<cmd> ^project <proj> -)
}