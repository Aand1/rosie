sp {INTERRUPT-RULE*topstate*action
   (state <s> ^topstate <s>
              ^operator.name action)
-->
   (interrupt)
}


####### propose pick-up for objects #########################################
sp {propose*pickup*object
   (state <s> ^problemspace.action <act>
          ^object <obj>
          ^environment <env>
         -^selected-action.name)
   (<env> -^grabbed <any>
       ^clear <obj>)
   (<act> -^type none)
   (<obj> -^category << location bin blocker >>)
-->
   (<s> ^operator <op> +)
   (<op> ^name op_pick-up-object
     ^argument1 <obj>
     ^action-type primitive)
}

sp {action*elaborate*action*selection*phase
   (state <s> ^problemspace.action <act>
              ^operator <o> +
             -^selected-action.name)
   (<o> ^name << op_pick-up-object >>)
-->
   (<o> ^phase selection)
}

