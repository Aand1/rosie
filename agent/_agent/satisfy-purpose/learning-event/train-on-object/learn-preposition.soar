#####################
# learn-preposition
#####################

sp {train-on-object*propose*train-relation
   (state <s> ^name train-on-object
              ^indicated-object <obj>
              ^relation <rel>
             -^trained <rel>)
   (<rel> ^relation <prep>
          ^object <obj2>)
-->
   (<s> ^operator <o> + =)
   (<o> ^name learn-preposition
        ^message <m>
        ^relation <rel>)
   (<m> ^fields <f> ^type learn-preposition)
   (<f> ^objects <object>)
   (<object> ^obj1 <obj>
             ^obj2 <obj2>
             ^type <prep>)
}
   
sp {train-on-object*apply*train-relation*mark*trained
   (state <s> ^name train-on-object
              ^learned <m>
              ^operator <o>)
   (<o> ^name learn-preposition
        ^message <m>
        ^relation <rel>)
-->
   (<s> ^trained <rel>)
}