sp {learn-goal-definition*propose*add-default-argument
   (state <s> ^name learn-goal-definition
              ^goal-predicate-info <info>)
   (<info> ^arg-info <arg-info>
           ^smem-predicate <smem-pred>)
   (<arg-info> -^matches <proc-arg>
              -^added)
-->
   (<s> ^operator <o> + =)
   (<o> ^name add-default-argument
        ^arg-info <arg-info>
        ^smem-predicate <smem-pred>)
}

sp {learn-goal-definition*apply*add-default-argument*create*default
   (state <s> ^name learn-goal-definition
              ^operator <o>)
   (<o> ^name add-default-argument
        ^arg-info <info>)
-->
   (<info> ^default <default>)
}

sp {learn-goal-definition*apply*add-default-argument*copy*predicate
   (state <s> ^name learn-goal-definition
              ^operator <o>)
   (<o> ^name add-default-argument
        ^arg-info <info>)
   (<info> ^argument.predicates <preds>
           ^default <default>)
   (<preds> ^{ <prop-handle> << color shape size name >> } <pred-handle>)
-->
  (<default> ^<prop-handle> <pred-handle>)
}

sp {learn-goal-defintion*apply*add-default-argument*copy*to*procedural
   (state <s> ^name learn-goal-definition
              ^operator <o>)
   (<o> ^name add-default-argument
        ^arg-info <arg-info>
        ^smem-predicate <smem-pred>)
   (<arg-info> ^num <arg-num>
               ^default <default>)
-->
   (<smem-pred> ^<arg-num> <new-proc-arg>)
   (<new-proc-arg> ^default <default>)
   (<arg-info> ^added true)
}
