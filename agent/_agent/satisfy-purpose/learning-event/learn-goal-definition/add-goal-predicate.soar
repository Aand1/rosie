sp {learn-goal-defintion*propose*add-goal-predicate
   (state <s> ^name learn-goal-definition
              ^goal-structure <goal>
              ^goal-predicate <pred>)
   (<pred> ^id <pred-id>)
   (<goal> -^predicate.id <pred-id>)
-->
   (<s> ^operator <o> + =)
   (<o> ^name add-goal-predicate
        ^goal-predicate <pred>)
}

sp {learn-goal-definition*apply*add-goal-predicate
   (state <s> ^name learn-goal-definition
              ^operator <o>
              ^goal-structure <goal>)
   (<o> ^name add-goal-predicate
        ^goal-predicate <pred>)
   (<pred> ^id <pred-id>
           ^type <pred-type>)
-->
   (<goal> ^predicate <new-pred>)
   (<new-pred> ^id <pred-id>
               ^type <pred-type>)
}