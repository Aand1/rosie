sp {learn-goal-defintion*propose*add-goal-predicate
   (state <s> ^name learn-goal-definition
              ^goal-structure <goal>
              ^goal-predicate-info <info>)
   (<info> -^smem-predicate)
-->
   (<s> ^operator <o> + =)
   (<o> ^name add-goal-predicate
        ^goal-predicate-info <info>)
}

sp {learn-goal-definition*apply*add-goal-predicate*matches
   (state <s> ^name learn-goal-definition
              ^operator <o>
              ^goal-structure <goal>)
   (<o> ^name add-goal-predicate
        ^goal-predicate-info <info>)
   (<info> ^predicate <pred>
           ^matches <proc-id>)
   (<pred> ^id <pred-id>
           ^type <pred-type>)
-->
   (<goal> ^predicate <new-pred>)
   (<new-pred> ^id <proc-id>
               ^type <pred-type>)
   (<info> ^smem-predicate <new-pred>)
}

sp {learn-goal-definition*apply*add-goal-predicate*no*matches
   (state <s> ^name learn-goal-definition
              ^operator <o>
              ^goal-structure <goal>)
   (<o> ^name add-goal-predicate
        ^goal-predicate-info <info>)
   (<info> ^predicate <pred>
           -^matches <proc-id>)
   (<pred> ^id <pred-id>
           ^type <pred-type>)
-->
   (<goal> ^predicate <new-pred>)
   (<new-pred> ^id <new-proc-id>
               ^type <pred-type>)
   (<new-proc-id> ^default <pred-id>)
   (<info> ^smem-predicate <new-pred>)
}