sp {learn-goal-definition*propose*add-matched-argument
   (state <s> ^name learn-goal-definition
              ^goal-predicate-info <info>)
   (<info> ^arg-info <arg-info>
           ^smem-predicate <smem-pred>)
   (<arg-info> ^matches <proc-arg>
              -^added)
-->
   (<s> ^operator <o> + =)
   (<o> ^name add-matched-argument
        ^arg-info <arg-info>
        ^smem-predicate <smem-pred>)
}

sp {learn-goal-definition*apply*add-matched-argument
   (state <s> ^name learn-goal-definition
              ^operator <o>)
   (<o> ^name add-matched-argument
        ^arg-info <arg-info>
        ^smem-predicate <smem-pred>)
   (<arg-info> ^num <arg-num>
               ^matches <proc-arg>)
-->
   (<smem-pred> ^<arg-num> <proc-arg>)
   (<arg-info> ^added true)
}