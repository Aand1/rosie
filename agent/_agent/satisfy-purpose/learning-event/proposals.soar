# learn-preposition
#
############################################################
sp {learning-event*propose*learn-preposition
   (state <s> ^name learning-event
              ^purpose <p>)
   (<p> ^type teach-relation
        ^parameters <params>)
   (<params> ^object <obj>
             ^relation <rel>)
   (<rel> ^arg2 <obj2> ^id <lti-rel>)
-->
   (<s> ^operator <o> + =)
   (<o> ^name learn-preposition
        ^relation-lti <lti-rel>
        ^arg1 <obj>
        ^arg2 <obj2>)
}

