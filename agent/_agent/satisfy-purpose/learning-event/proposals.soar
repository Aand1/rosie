

############################################################
#
# learn-word
#
############################################################

sp {learning-event*propose*learn-word
   (state <s> ^name learning-event
              ^purpose <p>)
   (<p> ^type learn-word
        ^parameters.word <word>)
-->
   (<s> ^operator <o> +)
   (<o> ^name learn-word
        ^word <word>
        ^category smem)
}

############################################################
#
# train-on-object
#
############################################################

sp {learning-event*propose*train-on-object
   (state <s> ^name learning-event
              ^purpose <p>)
   (<p> ^type train-on-object
        ^parameters <params>)
   (<params> ^object <obj>
             ^predicate <pred>)
-->
   (<s> ^operator <o> +)
   (<o> ^name train-on-object
        ^object <obj>
        ^predicate <pred>)
}

