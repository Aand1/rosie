

############################################################
#
# learn-word
#
############################################################

sp {learning-event*propose*learn-word
   (state <s> ^name learning-event
              ^purpose <p>)
   (<p> ^type learn-word
        ^parameters.word <word>)
-->
   (<s> ^operator <o> +)
   (<o> ^name learn-word
        ^word <word>
        ^category smem)
}

############################################################
#
# train-on-object
#
############################################################

sp {learning-event*propose*train-on-object
   (state <s> ^name learning-event
              ^purpose <p>)
   (<p> ^type train-on-object
        ^parameters.indicated-object <obj>)
-->
   (<s> ^operator <o> +)
   (<o> ^name train-on-object
        ^object <obj>)
}

sp {learning-event*elaborate*train-on-object*predicate
   (state <s> ^name learning-event
              ^operator <o> +
              ^purpose.parameters.predicate <pred>)
   (<o> ^name train-on-object)
-->
	(<o> ^predicate <pred>)
}

sp {learning-event*elaborate*train-on-object*relation
   (state <s> ^name learning-event
              ^operator <o> +
              ^purpose.parameters.relation <rel>)
   (<o> ^name train-on-object)
-->
   (<o> ^relation <rel>)
}

