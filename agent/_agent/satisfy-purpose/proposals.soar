############################################################
#
# learn-word
#
############################################################

sp {satisfy-purpose*propose*learn-word
   (state <s> ^name satisfy-purpose
              ^purpose <p>)
   (<p> ^type learn-word
        ^parameters.word <word>)
-->
   (<s> ^operator <o> +)
   (<o> ^name learn-word
        ^word <word>
        ^category smem)
}

############################################################
#
# train-on-object
#
############################################################

sp {satisfy-purpose*propose*train-on-object
   (state <s> ^name satisfy-purpose
              ^purpose <p>)
   (<p> ^type train-on-object
        ^parameters.indexable <obj>)
   (<obj> ^type object)
-->
   (<s> ^operator <o> +)
   (<o> ^name train-on-object
        ^object <obj>)
}

sp {satisfy-purpose*elaborate*train-on-object*word
   (state <s> ^name satisfy-purpose
              ^operator <o> +
              ^purpose.parameters.indexable <word>)
   (<o> ^name train-on-object)
   (<word> ^type word)
-->
   (<o> ^word <word>)
}