###############################################################################
#
# Inside the execute-orient1 substate, this will put a orient command on the output link
#
###############################################################################

sp {execute-orient1*propose*send-orient-command
   (state <s> ^name execute-orient1
             -^current-action.orient-command.status success
              ^direction-id.yaw <yaw>)
-->
   (<s> ^operator <o> + >)
   (<o> ^name send-orient-command
        ^yaw <yaw>)
}

sp {execute-orient1*apply*send-orient-command
   (state <s> ^name execute-orient1
              ^operator <o>
              ^current-action <a>
              ^top-state.io.output-link <out>)
   (<o> ^name send-orient-command
        ^yaw <yaw>)
-->
   (<out> ^do-control-law <law>)
   (<law> ^name orient
          ^parameters.yaw <yaw>
          ^termination-condition.name stabilized)
   (<a> ^orient-command <law>)
}