###############################################################################
#
# Inside the execute-stop1 substate, this will put a stop command on the output link
#
###############################################################################

sp {execute-stop1*propose*send-stop-command
   (state <s> ^name execute-stop1
             -^current-action.stop-command)
-->
   (<s> ^operator <o> + >)
   (<o> ^name send-stop-command)
}

sp {execute-stop1*apply*send-stop-command
   (state <s> ^name execute-stop1
              ^operator.name send-stop-command
              ^current-action <a>
              ^top-state.io.output-link <out>)
-->
   (<out> ^do-control-law <law>)
   (<law> ^name stop
          ^termination-condition.name none)
   (<a> ^stop-command <law>)
}
