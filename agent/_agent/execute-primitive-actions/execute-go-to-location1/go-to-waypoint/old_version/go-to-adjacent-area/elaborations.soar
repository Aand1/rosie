sp {go-to-adjacent-area*elaborate*current-location*from*superoperator
   (state <s> ^name go-to-adjacent-area
              ^superstate.operator.current-location <loc>)
-->
   (<s> ^current-location <loc>)
}

sp {go-to-adjacent-area*elaborate*desired*from*superoperator*area
   (state <s> ^name go-to-adjacent-area
              ^superstate.operator.area <area>)
-->
   (<s> ^desired.area <area>)
}

sp {go-to-adjacent-area*elaborate*problem-space
   (state <s> ^name go-to-adjacent-area
             -^name evaluate-operator)
-->
   (<s> ^problem-space <p>)
   (<p> ^name waypoint-search
        ^default-state-copy no) 
        #^one-level-attributes destination
        #^two-level-attributes top-state
        #^dont-copy current-location)
}

sp {go-to-adjacent-area*copy*world*superstate
   (state <s> ^name go-to-adjacent-area
              ^superstate.world <world>)
-->
   (<s> ^world <world>)
}
