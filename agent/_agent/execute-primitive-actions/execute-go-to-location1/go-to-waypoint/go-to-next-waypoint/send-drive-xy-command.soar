###############################################################################
#
# Inside the go-to-next-waypoint substate, this will put a drive-to-waypoint command on the output link
#
###############################################################################

sp {go-to-next-waypoint*propose*send-drive-xy-command
   (state <s> ^name go-to-next-waypoint
             -^current-action.drive-command)
-->
   (<s> ^operator <o> + >)
   (<o> ^name send-drive-xy-command)
}

sp {go-to-next-waypoint*apply*send-drive-xy-command*no*until
   (state <s> ^name go-to-next-waypoint
              ^operator.name send-drive-xy-command
              ^current-action <a>
              ^waypoint <wp>
              ^top-state.io.output-link <out>)
   (<wp> ^x <x> ^y <y>)
-->
   (<out> ^do-control-law <law>)
   (<law> ^name drive-xy
          ^parameters <params>
          ^termination-condition.name stabilized)
   (<params> ^x <x> ^y <y>)
   (<a> ^drive-command <law>)
}