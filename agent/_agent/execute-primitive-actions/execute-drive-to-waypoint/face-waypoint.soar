sp {execute-drive-to-waypoint1*propose*face-waypoint
   (state <s> ^name execute-drive-to-waypoint1
              ^current-action <a>
              ^waypoint <wp>)
   (<a> -^face-command <cmd>)
-->
   (<s> ^operator <o> + >)
   (<o> ^name face-waypoint
        ^waypoint <wp>)
}

# For now don't use pose
sp {execute-drive-to-waypoint1*apply*face-waypoint
   (state <s> ^name execute-drive-to-waypoint1
              ^operator <o>
              ^current-action <a>
              ^top-state.world.robot.current-waypoint <cur-wp>
              ^top-state.io.output-link <out>)
   (<o> ^name face-waypoint
        ^waypoint <wp>)
   (<wp> ^id <id> ^x <x> ^y <y>)
   (<cur-wp> ^x <cx> ^y <cy>)
-->
   (<out> ^face-point <fp>)
   (<fp> ^cur-x <cx> ^cur-y <cy> ^x <x> ^y <y>)
   (<a> ^face-command <fp>)
}


   