### ground goal arguments using pairs
sp {generate-ground-predicate*paired-arugments
   (state <s> ^name generate-grounded-predicate
   	      ^grounded-predicate <gp>
	      ^definition <def>
	      ^pair <pair>)
   (<pair> ^wmem-object <wobj>
	   ^argument <arg>
	   ^matched yes)
   (<def> ^<arg> <sobj>)
-->
   (<gp> ^<arg> <wobj>)
}

#### elaborate if grounding is complete
sp {generate-grounded-predicate*grounding*relation*success
   (state <s> ^name generate-grounded-predicate
	      ^grounded-predicate <gp>)
   (<gp> ^relation <any-rel>
   	 ^p1 <any-p1>
	 ^p2 <any-p2>)
-->
   (<s> ^grounding-successful <gp>)
}

sp {generate-grounded-predicate*grounding*state*success
   (state <s> ^name generate-grounded-predicate
	      ^grounded-predicate <gp>)
   (<gp> ^state <any-rel>
   	 ^p1 <any-p1>)
-->
   (<s> ^grounding-successful <gp>)
}
   

### grounding failure

sp {generate-grounded-predicate*grounding*failure
   (state <s> ^name generate-grounded-predicate
   	      ^grounded-predicate <gp>
	      -^grounding-successful <gp>)
-->
   (<s> ^grounding-failure <gp>)
}