sp {evaluate-assignment*propose*apply*filters
   (state <s> ^name evaluate-assignment  
   	     -^matched)
-->
   (<s> ^operator <op> + =)
   (<op> ^name apply-filters)
}

sp {evaluate-assignment*propose*complete-evaluate-assignment
   (state <s> ^name evaluate-assignment
   	      ^evaluation <eval>)
   (<eval> ^evaluation << successful failure >>)
-->
   (<s> ^operator <op> + <)
   (<op> ^name complete-evaluate-assignment)
}