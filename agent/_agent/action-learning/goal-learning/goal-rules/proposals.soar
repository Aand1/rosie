### propose generate-hypothetical-state
sp {rules*propose*generate-hypothetical-state
   (state <s> ^name goal-rules
   	      ^indexed-action <ia>)
   (<ia> -^name)
-->
   (<s> ^operator <op> + >)
   (<op> ^name generate-hypothetical-state)
}

### propose goal-elaboration
sp {rules*propose*goal-elaboration
   (state <s> ^name goal-rules
   	      ^indexed-action <ia>)
   (<ia> ^name 
   	 -^desired)
-->
   (<s> ^operator <op> +)
   (<op> ^name goal-elaboration)
}

### propose termination
sp {rules*propose*termination
   (state <s> ^name goal-rules
   	      ^indexed-action <ia>)
   (<ia> ^desired
   	 -^applied yes)
-->
   (<s> ^operator <op> +)
   (<op> ^name termination)
}


sp {goal-rules*propose*report-status
   (state <s> ^name goal-rules)
-->
   (<s> ^operator <op> + <)
   (<op> ^name report-rule-learning-success)
}

sp {goal-rules*apply*report-status
   (state <s> ^name goal-rules
   	      ^superstate <ss>
	      ^operator.name report-rule-learning-success)
-->
   (<ss> ^learned rules)
}