sp {goal-definition*propose*learn-definiton
   (state <s> ^name definition
   	      ^superstate.operator <sop>   
	      -^learned definition)
   (<sop> ^purpose <p>)
   (<p> ^type goal-learning)
-->
   (<s> ^operator <op> +)
   (<op> ^name learn-definition
   	 ^purpose <p>)
}

sp {goal-definition*propose*revise-definition
   (state <s> ^name definition
   	      ^superstate.operator <sop>
	      -^revised definition)
   (<sop> ^purpose <p>)
   (<p> ^type goal-revision)
-->
   (<s> ^operator <op> +)
   (<op> ^name revise-definition
   	 ^purpose <p>)
}

sp {goal-definition*propose*report-status
   (state <s> ^name definition)
-->
   (<s> ^operator <op> + <)
   (<op> ^name complete-goal-definition)
}