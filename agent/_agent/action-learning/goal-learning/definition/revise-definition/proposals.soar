sp {revise-definition*propose*relax-filters
   (state <s> ^name revise-definition
   	      ^new-goal <ng>
	      ^grounded-goal <gg>
	      ^grounded-action <ga>
	      ^goal-id.relation-predicate <gid>
	      ^default-value <val>
	      -^relaxed-filters <valid>)
   (<ng> ^relation-predicate.<arg> <val>)
   (<gg> ^<arg> <val>)
   (<gid> ^<arg> <valid>)
-->
   (<s> ^operator <op> +, =)
   (<op> ^name relax-filters
   	 ^ltid <valid>
	 ^grounded-action <ga>
	 ^new-goal <ng>)
}

sp {revise-definition*propose*add-new-default
   (state <s> ^name revise-definition
   	      ^new-goal <ng>
	      ^grounded-goal <gg>
	      ^grounded-action <ga>
	      ^goal-id.relation-predicate <gid>
	      ^default-value <val>
	      -^added-new-default <valid>)
   (<ng> ^relation-predicate.<arg> <val>)
   (<gg> ^<arg> {<val1> <> <val>})
   (<gid> ^<arg> <valid>)
-->
   (<s> ^operator <op> +, =)
   (<op> ^name add-new-default
   	 ^ltid <valid>
	 ^grounded-action <ga>
	 ^new-goal <ng>)
}