sp {learn-proposal-rule*elaborate*problemspace*learning
   (state <s> ^name learn-proposal-rule
   	      ^problemspace <ps>)
   (<ps> ^learning <l>)
-->
   (<l> ^use chunking)
}


sp {learn-proposal-rule*copy*indexed-action
   (state <s> ^name learn-proposal-rule
   	      ^superstate <ss>)
   (<ss> ^indexed-action <ia>)
-->
   (<s> ^superstate-indexed-action <ia>)
}

sp {learn-proposal-rule*propose*action*superstate
   (state <s> ^name learn-proposal-rule
   	      ^superstate <ss>
	      ^superstate-indexed-action <ia>
	      ^successful-application <ia>)
-->
   (<ss> ^operator <ia> +)
}

