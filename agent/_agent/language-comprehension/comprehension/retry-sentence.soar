sp {comprehension*propose*retry-sentence
   (state <s> ^name comprehension
              ^segment <seg>)
   (<seg> ^original-sentence <is>
          ^retry-sentence <x>
         -^retried-sentence true)
   (<is> -^processed-sentence true)
-->
   (<s> ^operator <op> + =, >)
   (<op> ^name retry-sentence
         ^new-segment <nseg>)
}

