sp {comprehension*propose*termination-processing
   (state <s> ^name comprehension
              ^segment <seg>)
   (<seg> -^processed-terminator
           ^unfilled-receiver-item <ua>)
   (<ua> ^terminator <term>
         ^predicate <VP>)
-->
   (<s> ^operator <op> + =)
   (<op> ^name termination-processing)
}

sp {apply*termination-processing
   (state <s> ^operator.name termination-processing
              ^segment.semantics <sem>
              ^top-state.interaction.status <status>)
-->
   (<status> ^new-message <sem>)
}