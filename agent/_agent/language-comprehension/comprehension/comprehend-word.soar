sp {comprehension*propose*comprehend-word
   (state <s> ^name comprehension
              ^segment <seg>)
   (<seg> ^current-word <cw>)
   (<cw> -^processed true)
-->
   (<s> ^operator <o> +, =)
   (<o> ^name comprehend-word)
}

sp {apply*comprehend-word
   (state <s> ^operator <op>
              ^segment <seg>)
   (<op> ^name comprehend-word)
-->
   (<seg> ^comprehension-structure <cs>)
   (<cs> ^type word)
}

sp {apply*comprehend-word*skip-*
   (state <s> ^operator <op>
              ^segment <seg>)
   (<op> ^name comprehend-word)
   (<seg> ^current-word <cw>
          ^comprehension-structure <cs>)
   (<cw> ^spelling |*|)
-->
   (write (crlf) |Skip *|)
   (<cw> ^processed true)
   (<cs> ^processed true)
}

sp {comprehension*compare*comprehend-word
   (state <s> ^name comprehension
              ^operator <op1> +
                        <op2> +)
   (<op1> ^name comprehend-word)
   (<op2> ^name process-phrase-end)
-->
   (<s> ^operator <op1> > <op2>)
}
