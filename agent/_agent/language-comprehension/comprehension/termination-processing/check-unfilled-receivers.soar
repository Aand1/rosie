sp {termination-processing*propose*check-unfilled-receivers
   (state <s> ^name termination-processing)
   (<s> ^checked-unfilled-assigners true
       -^checked-unfilled-receivers true)
-->
   (<s> ^operator <op> + =)
   (<op> ^name check-unfilled-receivers)
}

sp {apply*check-unfilled-receivers
   (state <s> ^operator <op>
              ^segment <seg>)
   (<op> ^name check-unfilled-receivers)
  -(<seg> ^unfilled-receiver-item.lt-lexical-item.structure-type <> C)
-->
   (write (crlf) |No unfilled receivers.|)
   (<s> ^checked-unfilled-receivers true)
}

sp {apply*check-unfilled-receivers2
   (state <s> ^operator <op>
              ^segment <sp>)
   (<op> ^name check-unfilled-receivers)
   (<sp> ^unfilled-receiver-item.lt-lexical-item <item>)
   (<item> ^spelling { <> |*| <spell>}
           ^structure-type <> C)
-->
   (<s> ^failed <item>)
   (<s> ^checked-unfilled-receivers true)
   (write (crlf) |Unfulfilled receiver: | <spell> | parse failed.|)
}