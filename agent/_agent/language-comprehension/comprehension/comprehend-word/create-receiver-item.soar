sp {comprehend-word*propose*create-receiver
   (state <s> ^name comprehend-word
              ^segment <ss>
              ^current-word <cw>
              ^retrieved-lexical-item <id>)
  -{(<ss> ^comprehension-structure.not-merged-receiver <uri>)
    (<uri> ^lt <id>
           ^current-word <cw>)}
   (<ss> -^retry)
-->
   (<s> ^operator <op> + =)
   (<op> ^name create-receiver
         ^item <item>)
}
sp {comprehend-word*compare*create-receiver
   (state <s> ^name comprehend-word
              ^operator <op1> +
                        <op2> +)
   (<op1> ^name create-receiver)
   (<op2> ^name << retrieve-semantic-substructure remove-stale-receive >>)
-->
   (<s> ^operator <op1> < <op2>)
}

sp {apply*create-receiver*create-item
   (state <s> ^operator <op>
              ^current-word <cw>
              ^retrieved-lexical-item <id>
              ^segment <ss>
             -^name comprehend-construction)
   (<ss> ^comprehension-structure <cs>)
   (<op> ^name create-receiver
         ^item <item>)
   (<id> ^structure-type <stype>
        -^constraint)
-->
   (<cs> ^not-merged-receiver <item>)
   (<item> ^current-word <cw>
           ^lt <id>
           ^semantics <sem>
           ^structure-type <stype>
           ^decision-count (int (cmd stats -d)))}

