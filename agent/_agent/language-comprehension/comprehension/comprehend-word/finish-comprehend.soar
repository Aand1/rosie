sp {comprehend-word*propose*finish-comprehend
   (state <s> ^name comprehend-word)
-->
   (<s> ^operator <op> + =, <)
   (<op> ^name finish-comprehend)
}
sp {comprehend-word*compare*finish-comprehend
   (state <s> ^name comprehend-word
              ^operator <op1> +
                        <op2> +)
   (<op1> ^name finish-comprehend)
   (<op2> ^name << remove-stale-receiver process-new-word create-assigner-item create-receiver-item
                   remove-stale-assigner >>)
-->
   (<s> ^operator <op1> < <op2>)
}

sp {apply*finish-comprehend
   (state <s> ^operator <op>
              ^quiescence t
              ^current-word <cw>
              ^segment.comprehension-structure <cs>)
   (<op> ^name finish-comprehend)
-->
   (<cs> ^processed true)
   (<cw> ^processed true)
}
