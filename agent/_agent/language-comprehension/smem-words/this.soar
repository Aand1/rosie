############################
smem --add {
           
           (<this> ^spelling |this|
                   ^structure-type THIS 
                   ^number singular
                   ^demonstrative true
                   ^specifier definite)
           
           (<that> ^spelling |that|
                   ^structure-type THIS
                   ^number singular
                   ^demonstrative true
                   ^specifier definite)
           
           
## This one            
           (<this-one> ^prior-word |this| |that|
                       ^current-word |one|
                       ^spelling |this-one|
                       ^demonstrative true
                       ^structure-type DP)
           
### The one
           
           (<D-one> ^prior-word D
                  ^current-word |one|
                  ^spelling |D-one|
                  ^demonstrative true
                  ^number singular
                  ^structure-type N)  

### The green one
           (<ADJ-one> ^prior-word ADJ
                  ^current-word |one|
                  ^spelling |adj-one|
                  ^demonstrative true
                  ^number singular
                  ^structure-type N)  
           
        
           
## There is a construction in constructions-is for "This is ..."
           
# For ... this green block ...
           (<thsa> ^construction|this-adj|
                   ^structure-type THIS-ADJ  
                   ^number singular
                   ^demonstrative true
                   ^specifier definite                      
                   ^current-word ADJ
                   ^prior-word |this|
                   ^prior-word-first true
                   ^prior-word-first false
                   ^assigners <ths1> <ths2> <ths3>
                   ^converts-to DP)
           (<ths1> ^structure-type ADJ
                   ^syntactic-structure adjoin
                   ^parent <thsa>
                   ^repeatable true
                   ^optional true
                   ^before-type N 
                   ^before-type PP)
           (<ths2> ^structure-type N
                   ^syntactic-structure head 
                   ^parent <thsa>
                   ^relative-position after
                   ^required true 
                   ^before-type PP)
           (<ths3> ^structure-type PP
                   ^syntactic-structure complement
                   ^parent <thsa>
                   ^relative-position after
                   ^optional true)
           
# For ... this block ...
           (<thsb> ^construction|this-N|
                   ^structure-type THIS-N  
                   ^number singular
                   ^demonstrative true
                   ^specifier definite                      
                   ^current-word N
                   ^prior-word THIS
                   ^prior-word-first true
                   ^prior-word-first false
                   ^assigners <ths6> <ths4> <ths5> 
                   ^converts-to DP)
            (<ths6> ^structure-type THIS 
                   ^syntactic-structure nil 
                   ^parent <thsb>
                   ^required true)
           (<ths4> ^structure-type N
                   ^syntactic-structure head 
                   ^parent <thsb>
                   ^required true 
                   ^before-type PP)
           (<ths5> ^structure-type PP
                   ^syntactic-structure complement
                   ^parent <thsb>
                   ^relative-position after
                   ^optional true)
}
           