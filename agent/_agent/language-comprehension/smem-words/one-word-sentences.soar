           (<ass0> ^structure-type NO
                   ^parent-lexical-item <sentence>
                   ^syntactic-structure head
                   ^required true)
           (<ass1> ^structure-type T
                   ^required true
                   ^syntactic-structure terminator
                   ^parent-lexical-item <sentence>)
}


smem --add {
           (<sentence> ^spelling |*-done-T|
                       ^structure-type CP
                       ^prior-word FINISHED
                       ^prior-word-first true
                       ^current-word T
                       ^message-type finished
                       ^assigners <ass0> <ass1>)
           (<ass0> ^structure-type *FINISHED
                   ^parent-lexical-item <sentence>
                   ^syntactic-structure head
                   ^required true)
           (<ass1> ^structure-type T
                   ^required true
                   ^syntactic-structure terminator
                   ^parent-lexical-item <sentence>)
}


smem --add {
           (<yeah> ^spelling |yeah|
                  ^structure-type YES)

           (<ok> ^spelling |ok|
                  ^structure-type YES)

           (<yes> ^spelling |yes|
