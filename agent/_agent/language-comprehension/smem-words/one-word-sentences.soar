smem --add {
           (<sentence> ^spelling |*-yes-T|
                       ^structure-type CP
                       ^prior-word YES
                       ^current-word T
                       ^prior-word-first true
                       ^message-type yes
                       ^assigners <ass0> <ass1>)
           (<ass0> ^structure-type YES
                   ^parent-lexical-item <sentence>
                   ^syntactic-structure head
                   ^required true)
           (<ass1> ^structure-type T
                   ^after <ass0>
                   ^required true
                   ^syntactic-structure terminator
                   ^parent-lexical-item <sentence>)
}

smem --add {
           (<sentence> ^spelling |*-no-T|
                       ^structure-type CP
                       ^prior-word NO
                       ^prior-word-first true
                       ^current-word T
                       ^message-type no
