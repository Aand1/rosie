smem --add {
           (<yeah> ^spelling |yeah|
                   ^structure-type CP
                   ^message-type yes)

           (<ok> ^spelling |ok|
                 ^structure-type CP
                 ^message-type yes)

           (<yes> ^spelling |yes|
                  ^structure-type CP
                  ^message-type yes)

           (<no> ^spelling |no|
                 ^structure-type CP
                 ^message-type no)

           (<nope> ^spelling |nope|
                   ^structure-type CP
                   ^message-type no)

           (<done> ^spelling |done|
                   ^structure-type CP
                   ^message-type finished)
           
           (<are-done> ^construction |are-done|
                      ^prior-word |are|
                      ^current-word |done|
                      ^structure-type ADJ
                      ^semantic-value <task-completed>
                      ^referent nil) 
		   (<task-completed> ^id <finish-lti1>)
           (<finish-lti1> ^name task-completed)
           
           (<are-finished> ^construction |are-finished|
                      ^prior-word |are|
                      ^current-word |finished|
                      ^structure-type ADJ
                      ^semantic-value <task-completed>
                      ^referent nil) 

           (<is-done> ^construction |are-done|
                      ^prior-word |is|
                      ^current-word |done|
                      ^structure-type ADJ
                      ^semantic-value <task-completed>
                      ^referent nil) 
           
           (<is-finished> ^construction |are-finished|
                      ^prior-word |is|
                      ^current-word |finished|
                      ^structure-type ADJ
                      ^semantic-value <task-completed>
                      ^referent nil) 

           (<is-done> ^construction |is-over|
                      ^prior-word |is|
                      ^current-word |over|
                      ^structure-type ADJ
                      ^semantic-value <task-completed>
                      ^referent nil) 

           (<finished> ^spelling |finished|
                       ^structure-type CP
                       ^message-type finished)
}