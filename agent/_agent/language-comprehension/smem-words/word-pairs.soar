## Doesn't allow prepositional phrases after the verb.

smem --add {
           (<pickup> ^prior-word |pick|
                     ^current-word |up|
                     ^spelling |pick-up|
                     ^structure-type V
                     ^semantic-structure action
                     ^tense present
                     ^number singular
                     ^assigners <picka2>
                     ^referent <picko1>
                     ^converts-to  VP
                     ^prior-word-first true)
           (<picko1> ^id <soar-pick1>)
           (<picka2> ^structure-type DP
                     ^parent <pickup>
                     ^relative-position after
                     ^syntactic-structure head
                     ^semantic-structure arg1
                     ^constraint <pickcon2> <pickcon21>
                     ^optional true)
           (<pickcon2> ^movable true)
           (<pickcon21> ^type object)           
           (<soar-pick1> ^name soar-pickup1)
}

