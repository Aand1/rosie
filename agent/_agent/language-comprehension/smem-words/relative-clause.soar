## N ... that is
smem --add {
           (<sentence> ^construction |that-is-ADJ/DP/PP/C-ADJP-CONJP/RP|  # should extend to RP - who, which, whose, where, when
                       ^current-word |that|
                       ^prior-word D
                       ^structure-type RC
                       ^prior-word-first false
                       ^assigners <is> <isa> <isb> <isc> <isd> <ise>
                       ^converts-to RCP
                       ^attachment immediate) 
           (<is> ^structure-type IS-V
                 ^syntactic-structure predicate
                 ^required true)
           (<isa> ^structure-type ADV  # NOT - referent is negation
                  ^relative-position after
                  ^syntactic-structure adverb-modifier
                  ^semantic-structure modifier
                  ^referent-type literal
                  ^optional true)
           (<isb> ^structure-type ADJ #|that is green.|
                  ^exclusive <isc> <isd> <ise> 
                  ^relative-position after
                  ^syntactic-structure predicate
                  #^semantic-structure predicate
                  ^referent-type literal
                  ^optional true)
           (<isc> ^structure-type DP # |that is a triangle.|
                  ^exclusive <isb> <isd> <ise>  
                  ^relative-position after
                  ^syntactic-structure predicate
                  #^semantic-structure predicate
                  ^referent-type literal
                  ^optional true)
           (<isd> ^structure-type PP # that is in the garbage.|
                  ^exclusive <isb> <isc> <ise> 
                  ^relative-position after
                  ^attachment immediately-follow # Grab any following PP - don't let it skip over
                  ^syntactic-structure complement
                  #^semantic-structure relation
                  ^optional true)
           (<ise> ^structure-type C-ADJ-P # |that is smaller than the red triangle.|
                  ^exclusive <isb> <isc> <isd> 
                  ^relative-position after
                  ^syntactic-structure predicate
                  #^semantic-structure predicate
                  ^optional true)

}
