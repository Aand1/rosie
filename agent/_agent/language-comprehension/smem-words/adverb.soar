smem --add {
           (<not> ^spelling |not|
                  ^structure-type ADV
                  ^referent nil
                  ^semantic-value <negation>)
           (<negation> ^id <negid>)
           (<negid> ^name negation)

           (<up> ^spelling |up|
                 ^structure-type ADV  # Can be a Verb in some cases
                 ^relation <up-lti>)
           (<up-lti> ^name up1)
           
           (<down> ^spelling |down|
                   ^structure-type ADV  # Can be a Verb in some cases
                   ^relation <down-lti>)
           (<down-lti> ^name down1)
                                 
           (<forward> ^spelling |forward|
                   ^structure-type ADV  
                  ^semantic-value <forward>)
           (<forward> ^id <forid>)
           (<forid> ^name forward)           
                      
           (<backward> ^spelling |backward|
                   ^structure-type ADV  
                  ^semantic-value <backward1>)
           (<backward1> ^id <backid>)
           (<backid> ^name backward)    
                             
           (<around> ^spelling |around|
                   ^structure-type ADV  
                  ^semantic-value <around1>)
           (<around1> ^id <aroundid>)
           (<aroundid> ^name around)
      
}     