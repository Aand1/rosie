smem --add {
           (<not> ^spelling |not|
                  ^structure-type ADV
                  ^referent nil
                  ^semantic-value <negation>)
           (<negation> ^id <negid>)
           (<negid> ^name negation)



           (<up> ^spelling |up|
                 ^structure-type ADV  # Can be a Verb in some cases
                 ^relation <up-lti>)
           (<up-lti> ^name up1)
           
           (<down> ^spelling |down|
                   ^structure-type ADV  # Can be a Verb in some cases
                   ^relation <down-lti>)
           (<down-lti> ^name down1)
      
}     