smem --add {
           (<not> ^spelling |not|
                  ^structure-type ADV
                  ^referent <negid>)
           (<negid> ^handle negation)

           (<up> ^spelling |up|
                 ^structure-type ADV 
                 ^referent <upid>)
           (<upid> ^handle upwards)
           
           (<down> ^spelling |down|
                   ^structure-type ADV 
                   ^referent <down-lti>)
           (<down-lti> ^handle down1)
                                 
           (<forward> ^spelling |forward|
                      ^structure-type ADV  
                      ^referent <forid>)
           (<forid> ^handle forward)           
                      
           (<backward> ^spelling |backward|
                       ^structure-type ADV  
                       ^referent <backid>)
           (<backid> ^handle backward)    
                             
           (<around> ^spelling |around|
                     ^structure-type ADV  
                     ^referent <aroundid>)
           (<aroundid> ^handle around)
      
           (<slowly> ^spelling |slowly|
                 ^structure-type ADV   
                  ^referent <slowid>)
           (<slowid> ^handle slow1)
           
}     