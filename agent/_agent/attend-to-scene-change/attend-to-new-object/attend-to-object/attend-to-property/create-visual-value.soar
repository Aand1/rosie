sp {attend-to-object*propose*create-visual-value
   (state <s> ^name attend-to-property
              ^property-case <pc>
              ^wm-property <prop>)
   (<pc> ^type update
         ^best-hypothesis.name <label>)
   (<prop> -^value.label <label>)
-->
   (<s> ^operator <o> +)
   (<o> ^name create-visual-value
        ^value-name <label>)
}

sp {attend-to-object*apply*create-visual-value
   (state <s> ^name attend-to-property
              ^operator <o>
              ^wm-property <prop>)
   (<o> ^name create-visual-value
        ^value-name <label>)
