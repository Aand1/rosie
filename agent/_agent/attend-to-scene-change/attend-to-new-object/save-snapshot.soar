sp {attend-to-new-object*propose*perform-save-snapshot
   (state <s> ^name attend-to-new-object
              ^svs-object.id <id>
             -^snapshot-saved)
-->
   (<s> ^operator <o> +)
   (<o> ^name perform-save-snapshot
        ^category perception
        ^object-id <id>)
}

sp {attend-to-new-object*apply*perform-save-snapshot
   (state <s> ^name attend-to-new-object
              ^operator <o>
              ^svs.command <cmd>)
   (<o> ^name perform-save-snapshot
        ^object-id <id>)
-->
   (<cmd> ^save-snapshot <ss>)
   (<ss> ^id <id>)
   (<s> ^save-snapshot-command <ss>)
}

sp {attend-to-new-object*apply*perform-save-snapshot*mark*saved
   (state <s> ^name attend-to-new-object
              ^operator.name perform-save-snapshot
              ^save-snapshot-command.status success)
-->
   (<s> ^snapshot-saved true)
}