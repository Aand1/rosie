sp {save-snapshot*elaborate*distance*threshold
   (state <s> ^name save-snapshot)
-->
   (<s> ^distance-threshold 0)
}

sp {save-snapshot*elaborate*svs-object
   (state <s> ^name save-snapshot
              ^superstate.svs-object <obj>)
-->
   (<s> ^svs-object <obj>)
}

sp {save-snapshot*occluded*mark*good-object-view*false
   (state <s> ^name save-snapshot
              ^occlusion-amount > .001)
-->
   (<s> ^good-object-view false)
}

sp {save-snapshot*too-far*mark*good-object-view*false
   (state <s> ^name save-snapshot
              ^distance-threshold <dist>
              ^closest-object-distance < <dist>)
-->
   (<s> ^good-object-view false)
}

sp {save-snapshot*elaborate*good-object-view
   (state <s> ^name save-snapshot
              ^occlusion-amount < .001 
              ^distance-threshold <dist>
              ^closest-object-distance >= <dist>)
-->
   (<s> ^good-object-view true)
}

sp {save-snapshot*elaborate*snapshot-saved*false
   (state <s> ^name save-snapshot
              ^good-object-view false)
-->
   (<s> ^snapshot-saved false)
}