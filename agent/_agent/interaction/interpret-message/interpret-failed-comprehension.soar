# interpret-failed-comprehension
# - Description of message here
#
###################################################################

#######
# OPERATOR PROPOSAL
#######
sp {interpret-message*propose*interpret-failed-comprehension
   (state <s> ^name interpret-message
              ^instructor-message <msg>)
   (<msg> ^message-type failed-comprehension
         -^interpreted true)
-->
   (<s> ^operator <o> +)
   (<o> ^name interpret-failed-comprehension
        ^message <msg>)
}

#####
# OPERATOR APPLICATION
#####

# Mark the message as interpreted (retracts operator)
sp {interpret-message*apply*interpret-failed-comprehension*mark*interpreted
   (state <s> ^name interpret-message
              ^operator <o>)
   (<o> ^name interpret-failed-comprehension
        ^message <msg>)
-->
   (<s> ^mark-interpreted <msg>)
}

sp {interpret-message*apply*nterpret-failed-comprehension*add*purpose
   (state <s> ^name interpret-message
              ^top-state.io.output-link <out>
              ^operator <o>)
   (<o> ^name interpret-failed-comprehension
        ^message <msg>)
-->
#   (<out> ^send-message <msg>)
#   (<msg> ^type single-word-response
#          ^fields.word |Comprehension failed. Please rephrase your entry.|)
   (<s> ^new-segment-info <info>)
   (<info> ^purpose <p>
           ^originator instructor)
   (<p> ^type failed-comprehension
        ^parameters <params>
        ^satisfaction <sat>)
   (<sat> ^dialog-event.type single-word-response)
}