###################################################################
#
# interpret-finished
#   Occurs when the user indicates they are finished with 
#     a certain portion of an interaction
#   E.g. 'finished', 'done'
#
###################################################################

#######
# OPERATOR PROPOSAL
#######
sp {interpret-message*propose*interpret-finished
   (state <s> ^name interpret-message
              ^instructor-message <msg>)
   (<msg> ^message-type finished
         -^interpreted true)
-->
   (<s> ^operator <o> +)
   (<o> ^name interpret-finished
        ^message <msg>)
}

#####
# OPERATOR APPLICATION
#####

# Mark the message as interpreted (retracts operator)
sp {interpret-message*apply*interpret-finished*mark*interpreted
   (state <s> ^name interpret-message
              ^operator <o>
              ^quiescence t)
   (<o> ^name interpret-finished
        ^message <msg>)
-->
   (<msg> ^interpreted true)
}
