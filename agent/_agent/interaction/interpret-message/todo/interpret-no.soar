###################################################################
#
# interpret-no
#   User responds to a question with a negative
#   E.g. 'no', 'nope'
#
###################################################################

#######
# OPERATOR PROPOSAL
#######

sp {interpret-message*propose*interpret-no
   (state <s> ^name interpret-message
              ^instructor-message <msg>)
   (<msg> ^message-type no
         -^interpreted true)
-->
   (<s> ^operator <o> +)
   (<o> ^name interpret-no
        ^message <msg>)
}

#####
# OPERATOR APPLICATION
#####

# Mark the message as interpreted (retracts operator)
sp {interpret-message*apply*interpret-no*mark*interpreted
   (state <s> ^name interpret-message
              ^operator <o>)
   (<o> ^name interpret-no
        ^message <msg>)
-->
   (<s> ^mark-interpreted <msg>)
}
