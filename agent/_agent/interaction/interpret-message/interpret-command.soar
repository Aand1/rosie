###################################################################
#
# interpret-command
#   A command given by the instructor to the agent to do something
#   Construction: *-VP-T
#     E.g. 'Store the red sphere', 'Put the green large block in the pantry'
#
###################################################################

#######
# OPERATOR PROPOSAL
#######
sp {interpret-message*propose*generate-action-operator
   (state <s> ^name interpret-message
              ^instructor-message <msg>
             -^action-operator <op>)
   (<msg> ^message-type command)
-->
   (<s> ^operator <o> +)
   (<o> ^name generate-action-operator
        ^command-message <msg>)
}

sp {generate-action-operator*elaborate*allow-substate
   (state <s> ^name generate-action-operator
              ^superstate.name interpret-message)
-->
   (<s> ^allow-substate true)
}


sp {interpret-message*propose*interpret-command
   (state <s> ^name interpret-message
              ^instructor-message <msg>
              ^action-operator <op>)
   (<msg> ^message-type command
         -^interpreted true)
-->
   (<s> ^operator <o> +)
   (<o> ^name interpret-command)
}

sp {interpret-message*apply*interpret-command
   (state <s> ^name interpret-message
              ^instructor-message <msg>
              ^operator.name interpret-command
              ^action-operator <op>)
   (<op> ^action-handle <action-handle>)
-->
   (<s> ^new-segment-info <info>)
   (<info> ^purpose <p>
           ^originator instructor)
   (<p> ^type action
        ^parameters.action-operator <op>
        ^satisfaction.action-event.type <action-handle>)
   (<msg> ^interpreted true)
}

sp {interpret-message*apply*interpret-command*pop-segment*existing-action
   (state <s> ^name interpret-message
              ^operator.name interpret-command
              ^top-state.interaction.stack.segment.purpose.type action)
-->
   (<s> ^terminate-segment true)
}

sp {interpret-message*apply*interpret-command*add*hypothetical*objects*to*world*depth1
   (state <s> ^name interpret-message
              ^operator.name interpret-command
              ^action-operator.<arg-name> <arg>
              ^top-state.world.objects <objs>)
  (<arg> ^arg-type << object location >>
          ^id <obj>)
   (<objs> -^object <obj>)
-->
   (<objs> ^object <obj>)
}

sp {interpret-message*apply*interpret-command*add*hypothetical*objects*to*in*instance
   (state <s> ^name interpret-message
              ^operator.name interpret-command
              ^action-operator.<arg-name> <arg>
              ^top-state.world <world>)
   (<arg> ^arg-type object
          ^id <obj>)
   (<world> ^robot.current-location <loc>
            ^predicates.predicate <in-pred>)
   (<in-pred> ^handle in1)
   -{(<in-pred> ^instance <inst>)
     (<inst> ^1 <obj> ^2 <loc>)}

-->
   (<in-pred> ^instance <i>)
   (<i> ^1 <obj> ^2 <loc>)
}

sp {interpret-message*apply*interpret-command*add*hypothetical*objects*to*world*depth2
   (state <s> ^name interpret-message
              ^operator.name interpret-command
              ^action-operator.<arg-name> <arg>
              ^top-state.world.objects <objs>)
   (<arg> ^arg-type predicate
          ^{ << 1 2 >> } <obj>)
  (<obj> ^item-type << object location >>)
   (<objs> -^object <obj>)
-->
   (<objs> ^object <obj>)
}

sp {interpret-message*apply*interpret-command*add*hypothetical*objects*depth2*to*in*instance
   (state <s> ^name interpret-message
              ^operator.name interpret-command
              ^action-operator.<arg-name> <arg>
              ^top-state.world <world>)
   (<arg> ^arg-type predicate
          ^{ << 1 2 >> } <obj>)
  (<obj> ^item-type object)
  (<world> ^robot.current-location <loc>
           ^predicates.predicate <in-pred>)
  (<in-pred> ^handle in1)
  -{(<in-pred> ^instance <inst>)
    (<inst> ^1 <obj> ^2 <loc>)}
-->
   (<in-pred> ^instance <i>)
   (<i> ^1 <obj> ^2 <loc>)
}
              



