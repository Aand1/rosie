### copy the message on the interaction operator
sp {interaction*elaborate*state*message
   (state <s> ^name interaction
   	      ^superstate.operator.message <msg>)
-->
   (<s> ^message <msg>)
}


## copy the status
sp {interaction*copy*status
   (state <s> ^name interaction	
   	      ^superstate.operator.status <stat>)
-->
   (<s> ^status <stat>)
}


### copy the interaction stack
sp {interaction*copy*interaction
   (state <s> ^name interaction
   	      ^superstate.interaction <int>)
-->
   (<s> ^interaction <int>
   	^bit flip)
}

## copy terminate segment
sp {interaction*copy*terminate*segment
   (state <s> ^name interaction
   	      ^superstate.terminate-segment <seg>)
-->
   (<s> ^terminate-segment <seg>)
}

## copy modify segment
sp {interaction*copy*modify*segment
   (state <s> ^name interaction
   	      ^superstate.modify-segment-info <seg>)
-->
   (<s> ^modify-segment-info <seg>)
}

