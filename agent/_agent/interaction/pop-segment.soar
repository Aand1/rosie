sp {interaction*propose*pop-segment*clear-stack
   (state <s> ^name interaction
              ^topstate.interaction.stack.segment <seg>
              ^superstate.operator.clear-interaction-stack true)
-->
   (<s> ^operator <o> + =)
   (<o> ^name pop-segment
        ^segment <seg>)
}


