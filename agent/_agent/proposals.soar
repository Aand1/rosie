sp {topstate*propose*interaction*clear-interaction-stack
   (state <s> ^topstate <s>
              ^clear-interaction-stack true)
-->
   (<s> ^operator <o> + =)
   (<o> ^name interaction
        ^clear-interaction-stack true)
}

sp {topstate*propose*interaction*performed
   (state <s> ^topstate <s>
#              ^interaction.status.performed <perf>)
	       ^interaction.status.<any> <stat>)
-->
   (<s> ^operator <o> + =)
   (<o> ^name interaction
        ^status <stat>)
}

sp {topstate*propose*interaction*nl-input-link
   (state <s> ^topstate <s>
              ^nl.input-link.message <msg>)
-->
   (<s> ^operator <o> + =)
   (<o> ^name interaction 
        ^message <msg>)
}

sp {topstate*propose*interaction*input-link
   (state <s> ^topstate <s>
              ^io.input-link.message <msg>)
   (<msg> -^processed)
-->
   (<s> ^operator <o> + =)
   (<o> ^name interaction 
        ^message <msg>)
}
   
