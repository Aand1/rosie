######################################################
#
# Propose: init-agent
#
######################################################

sp {topstate*propose*init-agent
   (state <s> ^topstate <s>
             -^name rosie)
-->
   (<s> ^operator <o> + = >)
   (<o> ^name init-agent)
}

#######################################################
# 
# Propose: interaction 
#
########################################################

sp {topstate*propose*interaction*status-change
   (state <s> ^topstate <s>
             -^world-usage internal
              ^interaction.status.<any> <status>)
-->
   (<s> ^operator <o> + =)
   (<o> ^name interaction
        ^type status-change
        ^status-info <status>
        ^status-type <any>)
}

sp {topstate*propose*interaction*interaction-change
   (state <s> ^topstate <s>
             -^world-usage internal
              ^interaction.changes.<type> <change>)
-->
   (<s> ^operator <o> + =)
   (<o> ^name interaction
        ^type interaction-change
        ^change-info <change>
        ^change-type <type>)
}

#######################################################
# 
# Propose: satisfy-purpose
#
########################################################

sp {topstate*propose*satisfy-purpose
   (state <s> ^topstate <s>
				 -^world-usage internal
				^interaction.stack.segment.purpose {<p> <> none})
   (<p> -^type action-command
        -^type action
   	-^type goal-description
	-^category goal)
-->
   (<s> ^operator <o> +)
   (<o> ^name satisfy-purpose
        ^purpose <p>)
}


sp {topstate*propose*action
   (state <s> ^superstate nil
              ^interaction.stack.segment.purpose <p>
             -^current-action <act>)
   (<p> ^satisfaction.action-event
        ^parameters.action-command <cmd>)
-->
   (<s> ^operator <o> +)
   (<o> ^name action
        ^action-command <cmd>)
}

