##################################################
#
# Parameters
#
###################################################

sp {index-word*copy*parameters
   (state <s> ^name index-word
              ^superstate.operator.word.index-info.{<param> << use-interaction >>} <val>)
-->
   (<s> ^<param> <val>)
}

# Parameter: use-interaction << true false >>
#   If the lookup fails, whether the user should be asked more information about the word
#   Default: true
sp {index-word*parameter*use-interaction*default*true
   (state <s> ^name index-word
             -^superstate.operator.word.index-info.use-interaction)
-->
   (<s> ^use-interaction true)
}


##################################################
#
# Elaborations
#
###################################################

# target-word
sp {index-word*elaborate*target-word
   (state <s> ^name index-word
              ^superstate.operator.word <word>)
-->
   (<s> ^target-word <word>)
}