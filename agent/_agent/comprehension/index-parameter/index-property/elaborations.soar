# Parameters
#
###################################################

# Parameters:
sp {index-property*copy*parameters
   (state <s> ^name index-property
              ^superstate.operator.property.index-info.{<param> << use-interaction property-name >>} <val>)
-->
   (<s> ^<param> <val>)
}

# Parameter: use-interaction << true false >>
#   If the lookup fails, whether the user should be asked more information about the property
#   Default: true
sp {index-property*parameter*use-interaction*default*true
   (state <s> ^name index-property
             -^superstate.operator.property.index-info.use-interaction)
-->
   (<s> ^use-interaction true)
}


##################################################
#
# Elaborations
#
###################################################

# target-property
sp {index-property*elaborate*target-property
   (state <s> ^name index-property
              ^superstate.operator.property <property>)
-->
   (<s> ^target-property <property>)
}