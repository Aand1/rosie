sp {top-state*apply*init-agent*create*world-state
   (state <s> ^top-state <s>
              ^operator.name init-agent
              ^world-usage external)
-->
   (<s> ^world <w>)
   (<w> ^objects <objs>
        ^predicates <preds>
        ^robot <rob>)
   (<rob> ^arm <arm>
          ^moving-state stopped)
}

sp {top-state*apply*init-agent*create*scene-monitor
   (state <s> ^top-state <s>
              ^operator.name init-agent)
-->
   (<s> ^scene-monitor <mon>)
   (<mon> ^scene-changes <sc>)
   (<sc> ^change-info <info>)
}