sp {anystate*apply*attend-to-scene-change*new-object*create*object-info
   (state <s> ^operator <o>
              ^top-state.perception-monitor.object-monitor <obj-mon>)
   (<o> ^name attend-to-scene-change
        ^change <change>)
   (<change> ^type new-object
             ^perception-obj <perc-obj>)
   (<perc-obj> ^id <perc-id>)
-->
   (<obj-mon> ^object-info <new-obj-info>)
   (<new-obj-info> ^object-handle <perc-id>
                   ^perception-id <perc-id>
                   ^belief-id (concat |bel-| <perc-id>)
                   ^status stable)
}

