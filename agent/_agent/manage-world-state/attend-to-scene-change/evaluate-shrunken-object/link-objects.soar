sp {evaluate-shrunken-object*propose*link-objects
   (state <s> ^name evaluate-shrunken-object
              ^found-contained-fragment true
              ^object-info.perception-obj.id <dest-handle>)
-->
   (<s> ^operator <o> +)
   (<o> ^name link-objects
        ^dest-handle <dest-handle>)
}

sp {evaluate-shrunken-object*elaborate*link-objects*source-id
   (state <s> ^name evaluate-shrunken-object
              ^operator <o> +
              ^contained-fragment-id <src-handle>)
   (<o> ^name link-objects)
-->
   (<o> ^src-handle <src-handle>)
}

# Need to do all at once, otherwise only 1 fragment will be linked
sp {evaluate-shrunken-object*apply*link-objects
   (state <s> ^name evaluate-shrunken-object
              ^operator <o>
              ^io.output-link <ol>)
   (<o> ^name link-objects
        ^src-handle <src-handle>
        ^dest-handle <dest-handle>)
-->
   (<ol> ^modify-scene <ms>)
   (<ms> ^type link
         ^source-handle <src-handle>
         ^destination-handle <dest-handle>)
}

