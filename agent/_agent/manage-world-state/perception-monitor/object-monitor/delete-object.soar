##################################################################
#
# Monitoring for an object that needs deleted
#
##################################################################

sp {top-state*perception-monitor*object-monitor*mark-for-deletion*apply*any-op*delete*from*svs
   (state <s> ^top-state <s>
              ^operator <o>
              ^perception-monitor.object-monitor.object <obj>
              ^svs.command <cmd>)
   (<obj> ^mark-for-deletion true
          ^belief-obj.id <id>)
-->
   (<cmd> ^delete_node.id <id>)
}

sp {top-state*perception-monitor*object-monitor*mark-for-deletion*apply*any-op*delete*from*wm
  (state <s> ^top-state <s>
              ^operator <o>
              ^perception-monitor.object-monitor <sm>)
   (<sm> ^object <obj>)
   (<obj> ^mark-for-deletion true)
-->
   (<sm> ^object <obj> -)
}

sp {top-state*perception-monitor*object-monitor*mark-for-deletion*apply*any-op*report
   (state <s> ^top-state <s>
              ^operator <o>
              ^perception-monitor.object-monitor.object <obj>
              ^agent-params.debug-mode on
              ^agent-params.debug-perception true)
   (<obj> ^mark-for-deletion true
          ^id <id>)
-->
   (write |Deleting Object | <id>)
}
