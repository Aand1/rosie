# Mark the object update-pose
sp {anystate*apply*attend-to-scene-change*moved-object*update-pose
   (state <s> ^operator <o>)
   (<o> ^name attend-to-scene-change
        ^change <change>)
   (<change> ^type moved-object
             ^object-info <obj-info>)
-->
   (<obj-info> ^update-pose true)
}

# if debug-perception is on, print a message
sp {anystate*apply*attend-to-scene-change*moved-object*debug-perception*print
   (state <s> ^operator <o>
              ^top-state.agent-params.debug-perception true)
   (<o> ^name attend-to-scene-change
        ^change <c>)
   (<c> ^type moved-object
        ^object-info.object-handle <handle>)
-->
   (write |Moved object | <handle> |: update the pose| (crlf))
}