# elaborate predicate indicated=pointed

sp {top-state*elaborate*world*object*pointed*predicate
   (state <s> ^top-state <s>
              ^io.input-link.pointed-object <id>
              ^world.objects.object <obj>)
   (<obj> ^id <id>
          ^predicates <preds>)
-->
   (<preds> ^indicated pointed)
}

sp {top-state*elaborate*world*object*arm-status*not-grabbed
   (state <s> ^superstate nil
              ^world.objects.object.predicates <preds>)
   (<preds> -^arm-status << moving grabbed >> )
-->
   (<preds> ^arm-status not-grabbed)
}