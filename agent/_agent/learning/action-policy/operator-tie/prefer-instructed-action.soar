sp {elaborate*attribute*match*epmem*name
   (state <s> ^name selection
   	      ^indexed-action <map-op>
   	      ^operator <o> +)
   (<o> ^superoperator <sop>)
   (<sop> ^name <n>)
   (<map-op> ^name <n>) 
-->
   (<o> ^matched name)
}

sp {selection*mark*operators*with*same*arguments*relation
   (state <s> ^name selection
   	      ^operator <op> +
	      ^indexed-action <ia>)
   (<op> ^superoperator <sop>)
   (<ia> ^<arg> <val>)
   (<val> ^<arg2> <obj>)
   (<sop> ^<arg> <nval>)
   (<nval> ^<arg2> <nobj>)
   (<obj> ^id <id>) 
   (<nobj> ^id <id>)
-->
   (<op> ^matched <arg>)
}

sp {selection*mark*operators*with*same*argument
   (state <s> ^name selection
   	      ^operator <op> +
	      ^indexed-action <ia>)
   (<op> ^superoperator <sop>)
   (<ia> ^<arg> <val>)
   (<val> -^relation <any>)
   (<sop> ^<arg> <nval>)
   (<val> ^id <id>) 
   (<nval> ^id <id>)
-->
   (<op> ^matched <arg>)
}


sp {selection*elaborate*operator*match
   (state <s> ^name selection
   	      ^operator <op> + 
   	      ^indexed-action <map-op>)
   (<op> ^superoperator <sop>)
   (<map-op> ^{<attr> <> applied <> information <> _relation <> _metadata <> actions <> action-type} <val>)
   (<op> -^matched <attr>)
-->
   (<op> ^op-matched no)
}

sp {selection*prefer*match*epmem
   (state <s> ^name selection
              ^indexed-action <map-op>
   	      ^operator <o> +)
   (<o> -^op-matched no)
   -->
   (<s> ^operator <o> >)
}


### augment spatial-relationship to operator
sp {selection*augment*spatial-relationship
   (state <s> ^name action
   	      ^indexed-action <iop>
   	      ^operator <op> +)
   (<iop> ^<arg> <val>)
   (<val> ^relation <rel>
   	  ^<arg2> <obj>)
   (<op> ^<arg> <nval>)
   (<nval> ^<arg2> <obj>)
-->
   (<nval> ^relation <rel>)
}