sp {apply*interpret-motion-request*propose-create-target
	(state <s> ^name interpret-motion-request
               ^superstate <ss>
              -^plan)
  	(<ss> ^request)
-->
	(<s> ^operator <op> + =)
 	(<op> ^name create-target)
}

sp {apply*interpret-motion-request*apply-create-target
	(state <s> ^name interpret-motion-request
               ^operator.name create-target
               ^superstate <ss>)
 	(<ss> ^request.target <r>)
-->
	(<s> ^plan <pla>)
 	(<pla> ^target <r>)
}

sp {apply*interpret-motion-request*elaborate-plan-type
	(state <s> ^name interpret-motion-request
               ^superstate <t>)
 	(<t> ^request <r>)
