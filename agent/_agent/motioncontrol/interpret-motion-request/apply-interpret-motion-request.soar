sp {apply*interpret-motion-request*propose-put-output-link
	(state <s> ^name interpret-motion-request
               ^topstate.io.output-link <ol>
               ^plan <pla>)
 	(<pla> ^target
          	  ^step-size)
  	(<ol> -^plan)
-->
	(<s> ^operator <op> + =)
 	(<op> ^name put-output-link)
}

sp {apply*interpret-motion-request*apply-put-output-link
	(state <s> ^name interpret-motion-request
               ^operator.name put-output-link
               ^superstate.request <r>
               ^topstate.io.output-link <ol>
               ^plan <pla>)
-->
	(<ol> ^plan <pla>)
}