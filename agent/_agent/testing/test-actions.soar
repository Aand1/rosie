sp {topstate*prefer*others*over*create-purpose
   (state <s> ^topstate <s>
              ^operator <o1> +
              ^operator <o2> +)
   (<o1> ^name <> create-purpose)
   (<o2> ^name create-purpose)
-->
   (<s> ^operator <o1> > <o2>)
}

sp {state*no-change*apply*create-purpose*1
   (state <s> ^topstate <s>
              ^operator.name create-purpose
              ^interaction.changes <c>
              ^world.objects.object <obj>
             -^action-num)
   (<obj> ^id 11)
-->
   (<c> ^new-segment-info <info>)
   (<info> ^purpose <p>
           ^originator instructor)
   (<p> ^type action-command
        ^parameters.object <obj>
        ^satisfaction.action-event.type pickup)
   (<s> ^action-num 1)
}

