sp {initiate-find1*propose*expand-fringe
   (state <s> ^name initiate-find1
              ^fringe-edge <wp>
             -^executing-primitive-action true)
-->
   (<s> ^operator <o> + > =)
   (<o> ^name expand-fringe
        ^waypoint <wp>)
}

# Will expand a depth of 1, then retract
sp {initiate-find1*apply*expand-fringe
   (state <s> ^name initiate-find1
              ^operator <o>
              ^fringe-edge <wp>)
   (<o> ^name expand-fringe)
-->
   (<s> ^fringe <wp>)
   (<s> ^operator <o> -)
}