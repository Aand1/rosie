####################################################
# waypoint arguments

sp {learn-copy-action-elaboration-rule*propose*copy-argument*waypoint
   (state <s> ^name learn-copy-action-elaboration-rule
              ^copy-argument <ca>)
   (<ca> ^arg-type waypoint
         ^source-arg.id <wp>
        -^arg-copy)
-->
   (<s> ^operator <o> + =)
   (<o> ^name copy-argument
        ^argument <ca>
        ^arg-type waypoint
        ^waypoint <wp>)
}

sp {learn-copy-action-elaboration-rule*apply*copy-argument*waypoint
   (state <s> ^name learn-copy-action-elaboration-rule
              ^operator <o>)
   (<o> ^name copy-argument
        ^argument <ca>
        ^arg-type waypoint
        ^waypoint <wp>)
-->
   (<ca> ^arg-copy <copy>)
   (<copy> ^arg-type waypoint
           ^id <wp>)
}
