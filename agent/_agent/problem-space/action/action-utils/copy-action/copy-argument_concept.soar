####################################################
# concept arguments

sp {copy-action*propose*copy-argument*concept
   (state <s> ^name copy-action
              ^copy-argument <ca>)
   (<ca> ^arg-type concept
         ^source-arg.handle <h>
        -^arg-copy)
-->
   (<s> ^operator <o> + =)
   (<o> ^name copy-argument
        ^argument <ca>
        ^arg-type concept
        ^handle <h>)
}

sp {copy-action*apply*copy-argument*concept
   (state <s> ^name copy-action
              ^operator <o>)
   (<o> ^name copy-argument
        ^argument <ca>
        ^arg-type concept
        ^handle <h>)
-->
   (<ca> ^arg-copy <copy>)
   (<copy> ^arg-type concept
           ^handle <h>)
}