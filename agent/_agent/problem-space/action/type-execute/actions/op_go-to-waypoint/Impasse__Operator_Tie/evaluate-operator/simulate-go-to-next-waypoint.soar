# When simulating op_go-to-next-waypoint1, update the path cost
sp {evaluate-operator*elaborate*op_go-to-next-waypoint1*dx*dy
   (state <s> ^name evaluate-operator
              ^problem-space.name waypoint-search
              ^operator <o> +
              ^current-waypoint <cur-wp>)
   (<o> ^name op_go-to-next-waypoint1
        ^next-waypoint <new-wp>)
   (<cur-wp> ^x <cx> ^y <cy>)
   (<new-wp> ^x <dx> ^y <dy>)
-->
   (<o> ^dx (- <dx> <cx>)
        ^dy (- <dy> <cy>) )
}

sp {evaluate-operator*apply*op_go-to-next-waypoint1*update*path-cost
   (state <s> ^name evaluate-operator
              ^problem-space.name waypoint-search
              ^operator <o>
              ^superstate.operator.evaluation <eval>)
   (<o> ^name op_go-to-next-waypoint1
        ^dx <dx>
        ^dy <dy>
        ^next-waypoint <new-wp>)
   (<eval> ^current-waypoint {<cur-wp> <> <new-wp>}
           ^path-cost <old-cost>)
-->
   (<eval> ^path-cost <old-cost> -
           ^path-cost (+ <old-cost> (sqrt (+ (* <dx> <dx>) (* <dy> <dy>)))))
}

