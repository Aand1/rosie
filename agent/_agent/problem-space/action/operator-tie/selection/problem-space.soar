sp {action*operator-tie*elaborate*selection*problem-space
   (state <s> ^superstate.problem-space.name action
              ^superstate.problem-space.action.action-type composite
              ^impasse tie
              ^attribute operator)
-->
   (<s> ^problem-space <ps>)
   (<ps> ^name action
         ^default-state-copy no
         ^action <action>
         ^world <world>
         ^learning <learn>)
   (<action> ^type simulate)
   (<world> ^copy-type shallow)
}

################## EXPLORATION ########################

################## RETROSPECTIVE ######################

# Make sure subactions are copied from superstate
sp {action*selection*retrospective*elaborate*problem-space*subactions*copy-type
   (state <s> ^name selection
              ^problem-space <ps>)
   (<ps> ^name action
         ^learning.type retrospective)
-->
   (<ps> ^subactions.copy-type shallow)
}

# Turn chunking on
sp {action*selection*learning*retrospective*elaborate*learning*use*chunking
   (state <s> ^name selection
              ^problem-space <ps>)
   (<ps> ^name action
         ^learning <learn>)
   (<learn> ^type retrospective)
-->
   (<learn> ^use chunking)
}
