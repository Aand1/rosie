sp {elaborate*main-color-red
	(state <s> ^name update-object-list
               ^topstate <ts>)
 	(<ts> ^svs.spatial-scene <svs>)
  	(<svs> ^child <c>)
    (<c> ^color.red <red> > 0.8)
-->
	(<c> ^main-color red)
}

