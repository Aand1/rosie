sp {topstate*apply*init-object-list
	(state <s> ^superstate nil
               ^name storage-agent
			   ^operator <op>
               ^svs <svs>)
    (<op> ^name init-object-list)
-->
	(<s> ^to-store-list <t>)
 	(<t> ^update true)
}

