# elaborate action-operator from superoperator.action.execution-operator
sp {execute-action*elaborate*action-operator
   (state <s> ^name execute-action
              ^superstate.operator.action.execution-operator <op>)
-->
   (<s> ^action-operator <op>)
}

# elaborate current-action from superoperator.action
sp {execute-action*elaborate*current-action
   (state <s> ^name execute-action
              ^superstate.operator.action <action>)
-->
   (<s> ^current-action <action>)
}

# elaborate parent-action is current-action.prev exists
sp {execute-action*elaborate*parent-action
   (state <s> ^name execute-action
              ^current-action.prev { <prev> <> none })
-->
   (<s> ^parent-action <prev>)
}

# if the action-operator is a primitive action, elaborate action-to-match
sp {execute-action*primitive*elaborate*action-to-match
   (state <s> ^name execute-action
              ^action-operator <op>)
   (<op> ^action-type primitive)
-->
   (<s> ^action-to-match <op>)
}

