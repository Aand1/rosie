sp {op_put-down1*propose*remove-grabbed-flag
   (state <s> ^name op_put-down1
              ^current-action.put-down-command.status <status>
              ^held-object.predicates.arm-status grabbed)
-->
   (<s> ^operator <o> + >)
   (<o> ^name remove-grabbed-flag)
}

sp {op_put-down1*apply*remove-grabbed-flag
   (state <s> ^name op_put-down1
              ^operator.name remove-grabbed-flag
              ^held-object.predicates <preds>)
   (<preds> ^arm-status grabbed)
-->
   (<preds> ^arm-status grabbed -)
}
        
