sp {op_put-down1*elaborate*held-object*superoperator
   (state <s> ^name op_put-down1
              ^action-operator.arg1.id <obj>)
-->
   (<s> ^held-object <obj>)
}

sp {op_put-down*elaborate*object-info
   (state <s> ^name op_put-down1
              ^held-object <held>
              ^top-state.perception-monitor.object-monitor.object-info <obj-info>)
   (<obj-info> ^wm-obj <held>)
-->
   (<s> ^object-info <obj-info>)
}

sp {op_put-down*elaborate*destination*arg2
   (state <s> ^name op_put-down1
              ^action-operator.arg2.{2} <obj>)
-->
   (<s> ^destination <obj>)
}

sp {op_put-down*elaborate*calculation
   (state <s> ^name op_put-down1
              ^robot-position <rp>
              ^destination-position <op>)
   (<rp> ^x <rx> ^y <ry>)
   (<op> ^x <ox> ^y <oy>)
-->
   (<s> ^calculations <c>)
   (<c> ^robot-x <rx> ^robot-y <ry>
        ^object-x <ox> ^object-y <oy>)
}

sp {op_put-down*elaborate*calculations*distance
   (state <s> ^name op_put-down1
              ^calculations <c>)
   (<c> ^robot-x <rx> ^robot-y <ry>
        ^object-x <ox> ^object-y <oy>)
-->
   (<c> ^distance (sqrt (+ (* (- <ox> <rx>) (- <ox> <rx>) )
                           (* (- <oy> <ry>) (- <oy> <ry>) ) ) ) )
}

sp {op_put-down*elaborate*calculations*theta
   (state <s> ^name op_put-down1
              ^calculations <c>)
   (<c> ^robot-x <rx> ^robot-y <ry>
        ^object-x <ox> ^object-y <oy>)
-->
   (<c> ^theta (atan2 (- <oy> <ry>) (- <ox> <rx>) ) )
}

sp {op_put-down*elaborate*calcuations*drive-x*drive-y
   (state <s> ^name op_put-down1
              ^calculations <c>)
   (<c> ^robot-x <rx> ^robot-y <ry>
        ^object-x <ox> ^object-y <oy>
        ^theta <theta>)
-->
   (<c> ^drive-x (- <ox> (* 1.5 (cos <theta>) ) ) )
   (<c> ^drive-y (- <oy> (* 1.5 (sin <theta>) ) ) )
}
   
        
