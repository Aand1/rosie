sp {op_put-down*propose*internal-put-down
   (state <s> ^name op_put-down1
              ^held-object <obj>
              ^top-state.world.robot.arm.state internal
              -^current-action.put-down-command)
-->
   (<s> ^operator <o> + >)
   (<o> ^name internal-put-down
        ^object <obj>)
}

sp {op_put-down*apply*internal-put-down*send-confirmation
   (state <s> ^name op_put-down1
              ^operator <o>
              ^current-action.received-yes true
              ^top-state.interaction.changes <c>
              ^top-state.agent-params.arm-simulation-level none)
   (<o> ^name internal-put-down)
-->
   (<c> ^outgoing-message <msg>)
   (<msg> ^type simple-message
          ^message-type confirm-put-down)
}

sp {op_put-down*apply*internal-put-down*send-message
   (state <s> ^name op_put-down1
              ^operator <o>
              ^current-action <a>
              ^top-state.interaction.changes <c>)
   (<o> ^name internal-put-down
        ^object.predicates.{ << name shape >> } <shape>)
   (<a> -^sent-message true)
-->
   (<c> ^outgoing-message <msg>)
   (<msg> ^type give-item-request
          ^item <shape>)
   (<a> ^sent-message true)
}

sp {op_put-down*apply*internal-put-down*remove*grabbed
   (state <s> ^name op_put-down1
              ^operator.name internal-put-down
              ^held-object.predicates <preds>
              ^current-action <a>)
   (<a> ^received-yes true)
   (<preds> ^arm-status grabbed)
-->
   (<preds> ^arm-status grabbed -
            ^arm-status not-grabbed)
   (<a> ^put-down-command.status success)
}


