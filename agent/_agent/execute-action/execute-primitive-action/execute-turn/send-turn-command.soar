###############################################################################
#
# Inside the execute-turn1 substate, this will put a turn command on the output link
#
###############################################################################

sp {execute-turn1*propose*send-turn-command
   (state <s> ^problem-space.name execute-primitive-action
              ^action-handle turn1
              ^direction-id
             -^current-action.turn-command)
-->
   (<s> ^operator <o> + >)
   (<o> ^name send-turn-command)
}

sp {execute-turn1*apply*send-turn-command
   (state <s> ^problem-space.name execute-primitive-action
              ^action-handle turn1
              ^operator.name send-turn-command
              ^current-action <a>
              ^top-state.io.output-link <out>
              ^direction-id.side <side>
              ^direction-id.yaw <yaw>)
-->
   (<out> ^do-control-law <law>)
   (<law> ^name turn
          ^parameters.direction <side>
          ^termination-condition <cond>)
   (<cond> ^name rotation
           ^parameters.yaw <yaw>) # Not = pi/2 due to overshooting
   (<a> ^turn-command <law>)
}