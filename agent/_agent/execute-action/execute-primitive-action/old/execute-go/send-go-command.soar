###############################################################################
#
# Inside the execute-go1 substate, this will put a go command on the output link
#
###############################################################################

sp {op_go1*propose*send-go-command
   (state <s> ^name op_go1
             -^action-operator.arg2
             -^current-action.go-command)
-->
   (<s> ^operator <o> + >)
   (<o> ^name send-go-command)
}

sp {op_go1*apply*send-go-command*no*until
   (state <s> ^name op_go1
              ^operator.name send-go-command
              ^current-action <a>
              ^top-state.io.output-link <out>
             -^until-clause)
-->
   (<out> ^do-control-law <law>)
   (<law> ^name drive-forward
          ^termination-condition.name stabilized)
   (<a> ^go-command <law>)
}

sp {op_go1*apply*send-go-command*until
   (state <s> ^name op_go1
              ^operator.name send-go-command
              ^current-action <a>
              ^top-state.io.output-link <out>
              ^until-clause <until>)
-->
   (<out> ^do-control-law <law>)
   (<law> ^name drive-forward
          ^termination-condition <until>)
   (<a> ^go-command <law>)
}
