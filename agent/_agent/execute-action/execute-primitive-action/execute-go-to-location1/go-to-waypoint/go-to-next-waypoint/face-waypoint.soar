sp {go-to-next-waypoint*propose*face-waypoint
   (state <s> ^name go-to-next-waypoint
              ^current-action.position-set.next { <next> <> none }
             -^current-action.face-command
             -^current-action.drive-command)
   (<next> ^x <x> ^y <y>)
-->
   (<s> ^operator <o> + >)
   (<o> ^name face-waypoint
        ^position <next>)
}

sp {go-to-next-waypoint*apply*face-waypoint
   (state <s> ^name go-to-next-waypoint
              ^operator <o>
              ^top-state.io.input-link.self.pose <pose>
              ^top-state.io.output-link <out>
              ^current-action <a>)
   (<o> ^name face-waypoint
        ^position <pos>)
   (<pose> ^x <rx> ^y <ry>)
   (<pos> ^x <px> ^y <py>)
-->
   (<out> ^face-point <fp>)
   (<fp> ^cur-x <rx> ^cur-y <ry> ^x <px> ^y <py>)
   (<a> ^face-command <fp>)
}