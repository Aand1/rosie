sp {op_ask*propose*record-answer
   (state <s> ^name op_ask1
              ^current-action.answer <ans>
             -^added-answer)
-->
   (<s> ^operator <o> +)
   (<o> ^name record-answer
        ^answer <ans>)
}

sp {op_ask*apply*record-answer
   (state <s> ^name op_ask1
              ^operator <o>
              ^world.objects <objs>)
   (<o> ^name record-answer
        ^answer <ans>)
-->
   (<objs> ^object <obj>)
   (<obj> ^handle (make-constant-symbol |obj-hand|)
          ^item-type object
          ^predicates <preds>)
   (<preds> ^category message ^modifier1 answer1 ^sentence <ans>)
   (<s> ^added-answer <obj>)
}
   
