sp {op_ask*propose*report-success
   (state <s> ^name op_ask1
              ^added-answer <ans>)
-->
   (<s> ^operator <o> + >)
   (<o> ^name report-success)
}

sp {op_ask*apply*report-success*mark*complete
   (state <s> ^name op_ask1
              ^operator.name report-success
              ^current-action <a>)
-->
   (<a> ^status complete)
}

sp {op_ask*apply*report-success*mark*parent*action*asked
   (state <s> ^name op_ask1
              ^operator.name report-success
              ^sentence <sent>
              ^added-answer <ans>
              ^parent-action <a>)
-->
   (<a> ^asked <sent>
        ^added <ans>)
}
