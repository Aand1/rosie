sp {op_stop*propose*report-success
   (state <s> ^name op_stop1
              ^current-action.stop-command.status success)
-->
   (<s> ^operator <o> + >)
   (<o> ^name report-success)
}

sp {op_stop*apply*report-success*add*status
   (state <s> ^name op_stop1
              ^operator.name report-success
              ^current-action <a>)
-->
   (<a> ^status complete)
}

sp {op_stop*apply*report-success*remove*command
   (state <s> ^name op_stop1
              ^operator.name report-success
              ^current-action <a>
              ^io.output-link <out>)
   (<a> ^stop-command <cmd>)
   (<out> ^<cmd-name> <cmd>)
-->
   (<a> ^stop-command <cmd> -)
   (<out> ^<cmd-name> <cmd> -)
}
             
    
