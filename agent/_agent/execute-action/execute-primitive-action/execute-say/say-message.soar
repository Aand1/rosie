sp {execute-say*propose*say-message
   (state <s> ^problem-space.name execute-primitive-action
              ^action-handle say1
             -^current-action.said
              ^sentence <msg>)
-->
   (<s> ^operator <o> + >)
   (<o> ^name say-message
        ^message <msg>)
}

sp {execute-say*apply*say-message*send*message
   (state <s> ^problem-space.name execute-primitive-action
              ^action-handle say1
              ^operator <o>
              ^top-state.interaction.changes <changes>
              ^current-action <a>)
   (<o> ^name say-message
        ^message <msg>)
-->
   (<changes> ^outgoing-message <send>)
   (<send> ^type say-sentence
           ^sentence <msg>)
   (<a> ^said true)
}
