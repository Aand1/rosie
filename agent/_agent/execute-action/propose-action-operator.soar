# If there is an action-operator on the state, then propose it
sp {execute-action*propose*action-operator
   (state <s> ^name execute-action
              ^action-operator <op>)
-->
   (<s> ^operator <op> +)
}

# copy the action-segment onto the state
sp {execute-action*elaborate*action-operator*action-segment
   (state <s> ^name execute-action
              ^action-operator <o>
              ^operator <o> +
              ^current-action <a>)
-->
   (<o> ^action-segment <a>)
}