sp {robot*elaborate*current-location*from*input-link
   (state <s> ^name robot
              ^io.input-link.current-location <loc>
              ^areas.area <area>)
   (<area> ^id <loc>)
-->
   (<s> ^current-location <area>)
}


sp {robot*elaborate*areas*neighbor-area
   (state <s> ^name robot
              ^areas.area <a1>
              ^areas.area <a2>)
   (<a1> ^id <id1>
         ^gateway.to <id2>)
   (<a2> ^id <id2>)
-->
   (<a1> ^neighbor-area <a2>)
   (<a2> ^neighbor-area <a1>)
}