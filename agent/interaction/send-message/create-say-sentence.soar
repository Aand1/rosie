sp {send-message*propose*create-say-sentence
   (state <s> ^name send-message
              ^message.type say-sentence
              ^message.sentence <sent>
             -^created-message)
-->
   (<s> ^operator <o> +)
   (<o> ^name create-say-sentence
        ^sentence <sent>)
}

sp {send-message*apply*create-say-sentence
   (state <s> ^name send-message
              ^operator <o>)
   (<o> ^name create-say-sentence
        ^sentence <sent>)
-->
   (<s> ^created-message <msg>)
   (<msg> ^type say-sentence
          ^originator agent
          ^fields.sentence <sent>)
}